<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shayriopen">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_65sdp"
        android:gravity="center">

    <Button

        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/Zoom_Button"
        android:background="@drawable/img_10"
        android:layout_marginLeft="@dimen/_55sdp"/>
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/Repet_button"
            android:background="@drawable/img_9"
            android:layout_marginLeft="@dimen/_100sdp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sdp"
        android:hint="text"
        android:textAlignment="center"

        android:id="@+id/Shayri_open_txt"
        />

    </androidx.cardview.widget.CardView>
</LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/Copy_button"
        android:background="@drawable/img_11"/>
    <Button
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/Left_button"
        android:background="@drawable/img_12"
        android:layout_toRightOf="@id/Copy_button"/>
    <Button
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/Edit_button"
        android:background="@drawable/img_14"
        android:layout_toRightOf="@id/Left_button"/>

</RelativeLayout>
</LinearLayout>

