<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shayriopen"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="@dimen/_312sdp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/Zoom_button"
            android:background="@drawable/img_10"
            android:layout_marginLeft="@dimen/_50sdp"/>

        <Button
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_47sdp"
            android:id="@+id/Color_change_button"
            android:background="@drawable/img_9"
            android:layout_marginLeft="@dimen/_105sdp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:id="@+id/Shayri_open_txt"
        android:textAlignment="center"
        android:hint="text"

        />

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
