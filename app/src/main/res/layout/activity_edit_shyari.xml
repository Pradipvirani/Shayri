<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Edit_shyari">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center_horizontal">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_20sdp"
        android:id="@+id/Edit_shayritext"
        android:background="@color/teal_200"
        />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/img_9"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/Change_button1"
            />

        <Button
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/img_10"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/Zoom_button1"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp">
            <Button
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="Background"
                android:textSize="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/Background_button"

                />
            <Button
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="TextColour"
                android:textSize="@dimen/_7sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/Text_color_button"

                />
            <Button
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp"
                android:text="Share"
                android:textSize="@dimen/_7sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/Share_button"

                />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp">
        <Button
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Font"
            android:textSize="@dimen/_7sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/Font_button"

            />
        <Button
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Emoji"
            android:textSize="@dimen/_7sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/Emoji_button"

            />
        <Button
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Text size"
            android:textSize="@dimen/_7sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:id="@+id/Size_button"

            />

    </LinearLayout>
    </LinearLayout>
